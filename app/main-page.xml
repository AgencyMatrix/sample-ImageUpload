<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
    <GridLayout rows="*, auto, auto">
        <ListView id="urls-list">
            <ListView.itemTemplate>
                <GridLayout columns="94, auto" rows="*, *, *, *">
                    <Image rowSpan="4" width="94" height="94" src="{{ thumb }}" />
                    <Label col="1" row="0" text="{{ uri }}" textWrap="true"/>
                    <Progress col="1" row="1" value="{{ uploadTask.upload }}" maxValue="{{ uploadTask.totalUpload }}" />
                    <Label col="1" row="2" text="{{ fileUri }}" />
                    <Label col="1" row="3" text="{{ imageName }}" />
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>
        <Button row="1" text="Pick & Upload Multiple Images" tap="onSelectMultipleTap" horizontalAlignment="center" />
        <Button row="2" text="Pick & Upload Single Image" tap="onSelectSingleTap" horizontalAlignment="center" />
    </GridLayout>
</Page>